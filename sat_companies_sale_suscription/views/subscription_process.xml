<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_subscription_process_tree" model="ir.ui.view">
            <field name="name">subscription.process.tree</field>
            <field name="model">subscription.process</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_subscription_process_form" model="ir.ui.view">
            <field name="name">subscription.process.form</field>
            <field name="model">subscription.process</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                               
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_process">
            <field name="name">Process</field>
            <field name="res_model">subscription.process</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_subscription_process" 
            name="Process" 
            parent="sale_subscription.menu_sale_subscription_config"
            action="action_view_process"
            />

    </data>
</odoo> 