<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report
                id="report_custom_template_sale_contract"
                string="Contrato de mantenimiento"
                model="sale.order"
                report_type="qweb-pdf"
                name="sat_companies.report_custom_template_sale_contract"
        />

        <record id="paperformat_sat_report_custom_template_sale_order_contract" model="report.paperformat">
          <field name="name">Formato de papel Contrato</field>
          <field name="default" eval="True"/>
          <field name="format">A4</field>
          <field name="page_height">0</field>
          <field name="page_width">0</field>
          <field name="orientation">Portrait</field>
          <field name="margin_top">10</field>
          <field name="margin_bottom">15</field>
          <field name="margin_left">7</field>
          <field name="margin_right">7</field>
          <field name="header_line" eval="False"/>
          <field name="header_spacing">3</field>
          <field name="dpi">90</field>
        </record>

         <template id="report_custom_template_sale_contract">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <p align="center"><strong>CONTRATO DE MANTENIMIENTO T - R</strong></p>
                        <br></br>
                        <p align="center">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" width="100" height="90"/>
                        </p>
                    </div>
                    <div class="article o_report_layout_standard">
                       <div class="page">
                          <strong><span>De una parte:</span></strong><span> </span><span t-field="o.partner_id.name"></span><br></br>
                          <strong><span>Con dominio en:</span></strong><span> </span><span t-field="o.partner_id.street"></span><br></br>
                          <strong><span>y con N.I.F:</span></strong><span> </span><span t-field="o.partner_id.vat"></span><br></br>
                          <strong><span>y de otra:</span></strong><span> </span><span></span><br></br>
                          <strong><span>Objeto:</span></strong><span> </span><span></span><br></br>
                          <strong><span>Lugar de instalación edificio:</span><span> </span></strong><span></span><br></br>
                          <strong><span>Núm. de Unidad:</span></strong><span> </span><span></span>
                          <br></br><br></br>
                          <table>
                            <t t-foreach="o.contract_line_ids" t-as="line">
                                <tr>
                                    <th>
                                        <span t-field="line.contact_id"/>
                                    </th>
                                </tr>
                                <tr>
                                    <td>
                                        <p align="justify">
                                            <span t-field="line.description"/>
                                        </p>
                                    </td>
                                </tr>
                            </t>
                          </table>
                       </div>
                    </div>
                    <div class="footer">
                        
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
