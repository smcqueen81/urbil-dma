<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_stock_gadgets_increase_type_tree" model="ir.ui.view">
            <field name="name">stock.gadgets.increase.type.tree</field>
            <field name="model">stock.gadgets.increase.type</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_gadgets_increase_type_form" model="ir.ui.view">
            <field name="name">stock.gadgets.increase.type.form</field>
            <field name="model">stock.gadgets.increase.type</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_stock_gadgets_increase_type">
            <field name="name">Increase type</field>
            <field name="res_model">stock.gadgets.increase.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_gadgets_increase_type" 
            name="Increase type" 
            parent="sat_companies_stock.menu_gadgets"
            action="action_view_stock_gadgets_increase_type"
            sequence="79"
            />

    </data>
</odoo> 