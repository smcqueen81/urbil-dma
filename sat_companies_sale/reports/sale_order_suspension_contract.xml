<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        

        <template id="report_custom_template_sale_suspension_contract">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <table class="one" align="left" border="1"  width="50%"> 
                            <tr> 
                                <td>
                                    <p align="justify">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" width="115" height="90"/>
                                    </p>
                                </td> 
                            </tr> 
                        </table>
                    </div>
                    <div class="article o_report_layout_standard">
                       <div class="page">
                          
                       </div>
                    </div>
                    <div class="footer">
                        
                    </div>
                </t>
            </t>
        </template>

        <report
                id="id_template_sale_suspension_contract"
                string="Resolución / Suspensión de Contrato"
                model="sale.order"
                report_type="qweb-pdf"
                name="sat_companies_sale.report_custom_template_sale_suspension_contract"
        />

    </data>
</odoo>
